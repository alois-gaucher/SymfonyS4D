{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% block content %}
    <h1>tous les Posts</h1>
    {% for post in posts %}
        <h2>{{ post.title }}</h2>
        <p>{{ post.content }}</p>
        <p>Cat√©gorie {{ post.category.title }}</p>
        <p><i>{{ post.dateCreated|date('d/m/Y H:i') }}</i></p>
        <a href="{{ path('supprimer_post', {post:post.id}) }}">Supprimer</a>
    {% endfor %}
{% endblock %}

{% endblock %}
