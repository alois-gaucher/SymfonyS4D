{# templates/color/color.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Color{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <p>You choose
                <style>
                    #color {
                        color: {{ color }};
                    }
                </style>
                <b id="color">{{ color }}</b>
            </p>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
